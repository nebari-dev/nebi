# Darb Environment Variables
# Copy this file to .env and update with your values

# Admin User (optional - auto-created on startup if set)
export ADMIN_USERNAME=admin
export ADMIN_PASSWORD=change-me-in-production
export ADMIN_EMAIL=admin@example.com

# Authentication Secrets
export DARB_AUTH_JWT_SECRET="change-me-in-production"

# OIDC/OAuth Configuration
# For Google OAuth:
export DARB_AUTH_OIDC_ISSUER_URL="https://accounts.google.com"
export DARB_AUTH_OIDC_CLIENT_ID="your-client-id.apps.googleusercontent.com"
export DARB_AUTH_OIDC_CLIENT_SECRET="your-client-secret"
export DARB_AUTH_OIDC_REDIRECT_URL="http://localhost:8460/api/v1/auth/oidc/callback"

# For GitHub OAuth:
# export DARB_AUTH_OIDC_ISSUER_URL="https://github.com"
# export DARB_AUTH_OIDC_CLIENT_ID="your-github-client-id"
# export DARB_AUTH_OIDC_CLIENT_SECRET="your-github-client-secret"

# For Keycloak:
# export DARB_AUTH_OIDC_ISSUER_URL="https://keycloak.example.com/realms/your-realm"
# export DARB_AUTH_OIDC_CLIENT_ID="darb"
# export DARB_AUTH_OIDC_CLIENT_SECRET="your-client-secret"

# Database (optional)
# export DARB_DATABASE_DRIVER="sqlite"
# export DARB_DATABASE_DSN="./darb.db"

# Server (optional)
# export DARB_SERVER_PORT="8460"
# export DARB_SERVER_MODE="development"

# Domain configuration for Traefik (for production deployment)
# DARB_DOMAIN=darb.example.com
# ACME_EMAIL=admin@example.com
