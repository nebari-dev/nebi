# Darb Environment Variables
# Copy this file to .env and update with your values

# Admin User (optional - auto-created on startup if set)
export ADMIN_USERNAME=admin
export ADMIN_PASSWORD=change-me-in-production
export ADMIN_EMAIL=admin@example.com

# Authentication Secrets
export NEBI_AUTH_JWT_SECRET="change-me-in-production"

# OIDC/OAuth Configuration
# For Google OAuth:
export NEBI_AUTH_OIDC_ISSUER_URL="https://accounts.google.com"
export NEBI_AUTH_OIDC_CLIENT_ID="your-client-id.apps.googleusercontent.com"
export NEBI_AUTH_OIDC_CLIENT_SECRET="your-client-secret"
export NEBI_AUTH_OIDC_REDIRECT_URL="http://localhost:8460/api/v1/auth/oidc/callback"

# For GitHub OAuth:
# export NEBI_AUTH_OIDC_ISSUER_URL="https://github.com"
# export NEBI_AUTH_OIDC_CLIENT_ID="your-github-client-id"
# export NEBI_AUTH_OIDC_CLIENT_SECRET="your-github-client-secret"

# For Keycloak:
# export NEBI_AUTH_OIDC_ISSUER_URL="https://keycloak.example.com/realms/your-realm"
# export NEBI_AUTH_OIDC_CLIENT_ID="nebi"
# export NEBI_AUTH_OIDC_CLIENT_SECRET="your-client-secret"

# Database (optional)
# export NEBI_DATABASE_DRIVER="sqlite"
# export NEBI_DATABASE_DSN="./nebi.db"

# Server (optional)
# export NEBI_SERVER_PORT="8460"
# export NEBI_SERVER_MODE="development"

# Domain configuration for Traefik (for production deployment)
# NEBI_DOMAIN=nebi.example.com
# ACME_EMAIL=admin@example.com

# Docker Compose configuration
# Required when using docker-compose.yml
# export POSTGRES_PASSWORD=change-me-in-production
