# Production Environment Configuration for Darb
# Copy this file to .env.prod and update with your values

# Domain Configuration
DARB_DOMAIN=darb.example.com
ACME_EMAIL=admin@example.com

# Docker Image
DARB_IMAGE=quay.io/openteams-ai/darb:latest

# Database Configuration
POSTGRES_DB=darb
POSTGRES_USER=darb
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Authentication Secrets
DARB_AUTH_JWT_SECRET=CHANGE_ME_IN_PRODUCTION

# OIDC/OAuth Configuration (optional)
# For Google OAuth:
# DARB_AUTH_OIDC_ISSUER_URL=https://accounts.google.com
# DARB_AUTH_OIDC_CLIENT_ID=your-client-id.apps.googleusercontent.com
# DARB_AUTH_OIDC_CLIENT_SECRET=your-client-secret
# DARB_AUTH_OIDC_REDIRECT_URL=https://darb.example.com/api/v1/auth/oidc/callback

# Admin User (created on first startup if no users exist)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
ADMIN_EMAIL=admin@example.com
