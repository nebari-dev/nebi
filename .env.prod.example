# Production Environment Configuration for Darb
# Copy this file to .env.prod and update with your values

# Domain Configuration
NEBI_DOMAIN=nebi.example.com
ACME_EMAIL=admin@example.com

# Docker Image
NEBI_IMAGE=quay.io/aktech/nebi:latest

# Database Configuration
POSTGRES_DB=nebi
POSTGRES_USER=nebi
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Authentication Secrets
NEBI_AUTH_JWT_SECRET=CHANGE_ME_IN_PRODUCTION

# OIDC/OAuth Configuration (optional)
# For Google OAuth:
# NEBI_AUTH_OIDC_ISSUER_URL=https://accounts.google.com
# NEBI_AUTH_OIDC_CLIENT_ID=your-client-id.apps.googleusercontent.com
# NEBI_AUTH_OIDC_CLIENT_SECRET=your-client-secret
# NEBI_AUTH_OIDC_REDIRECT_URL=https://nebi.example.com/api/v1/auth/oidc/callback

# Admin User (created on first startup if no users exist)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
ADMIN_EMAIL=admin@example.com
